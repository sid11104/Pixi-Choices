{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "*": ["types/*"]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }